<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.SeparatorMenuItem?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.krisztianszabo.tictactoe.MainWindowController">
    <top>
        <MenuBar>
            <Menu text="Game">
                <MenuItem text="New Game" onAction="#startNewGame"/>
                <MenuItem text="Undo Move" onAction="#undoLastMove"
                          fx:id="menuUndo" disable="true"/>
                <MenuItem text="Settings" onAction="#showSettingsScene"/>
                <SeparatorMenuItem />
                <MenuItem text="Quit" onAction="#quitProgram"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <GridPane BorderPane.alignment="CENTER" fx:id="gameGrid">
            <children>
                <ImageView id="cell0"
                        GridPane.columnIndex="0" GridPane.rowIndex="0"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <ImageView id="cell1"
                        GridPane.columnIndex="1" GridPane.rowIndex="0"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <ImageView id="cell2"
                        GridPane.columnIndex="2" GridPane.rowIndex="0"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <ImageView id="cell3"
                        GridPane.columnIndex="0" GridPane.rowIndex="1"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <ImageView id="cell4"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <ImageView id="cell5"
                        GridPane.columnIndex="2" GridPane.rowIndex="1"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <ImageView id="cell6"
                        GridPane.columnIndex="0" GridPane.rowIndex="2"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <ImageView id="cell7"
                        GridPane.columnIndex="1" GridPane.rowIndex="2"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
                <ImageView id="cell8"
                        GridPane.columnIndex="2" GridPane.rowIndex="2"
                        GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <Label BorderPane.alignment="CENTER" fx:id="scoreLabel"/>
    </bottom>
</BorderPane>