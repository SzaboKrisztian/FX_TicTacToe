<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.krisztianszabo.tictactoe.SettingsWindowController"
          fx:id="mainPane" hgap="10" vgap="10">
    <children>
        <Label text="First player's name:" alignment="CENTER_RIGHT"
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label text="Second player's name:" alignment="CENTER_RIGHT"
               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField text="" alignment="CENTER_LEFT" id="p1name" fx:id="p1name"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <TextField text="" alignment="CENTER_LEFT" id="p2name" fx:id="p2name"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button text="Cancel" alignment="CENTER" fx:id="buttonCancel"
                onAction="#cancelAndClose"
                GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Button text="Save &amp; Close" alignment="CENTER" fx:id="buttonSave"
                onAction="#saveAndClose"
                GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </children>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" halignment="RIGHT"/>
        <ColumnConstraints hgrow="ALWAYS" halignment="LEFT"/>
    </columnConstraints>
</GridPane>